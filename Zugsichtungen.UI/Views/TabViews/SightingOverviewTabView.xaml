<customControls:TabView x:Class="Zugsichtungen.UI.Views.TabViews.SightingOverviewTabView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Zugsichtungen.UI.Views.TabViews"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
                xmlns:customControls="clr-namespace:Zugsichtungen.UI.Controls.CustomControls;assembly=Zugsichtungen.UI.Controls"
                xmlns:converter="clr-namespace:Zugsichtungen.UI.Converter"
                xmlns:vm="clr-namespace:Zugsichtungen.ViewModels;assembly=Zugsichtungen.ViewModels"
                xmlns:dialogViewModel="clr-namespace:Zugsichtungen.ViewModels.DialogViewModels;assembly=Zugsichtungen.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <customControls:TabView.Resources>
        <converter:DateOnlyToGermanDateConverter x:Key="DateOnlyToGermanDateConverter" />

        <CollectionViewSource x:Key="SichtungenGrouped"
                              Source="{Binding Sichtungsliste}">
            <CollectionViewSource.GroupDescriptions>
                <!-- Gruppieren nach Date -->
                <PropertyGroupDescription PropertyName="Date" />
            </CollectionViewSource.GroupDescriptions>
        </CollectionViewSource>
    </customControls:TabView.Resources>

    <Grid>
        <DataGrid AutoGenerateColumns="False" ItemsSource="{Binding Source={StaticResource SichtungenGrouped}}"
                      SelectedItem="{Binding SelectedItem}" 
                      Grid.Row="1"
                      Margin="10">
            <DataGrid.InputBindings>
                <MouseBinding MouseAction="LeftDoubleClick"
                      Command="{Binding ShowSightingDetailsCommand, Mode=OneTime}"/>
            </DataGrid.InputBindings>
            <DataGrid.Columns>
                <DataGridTextColumn Header="Fahrzeug" Binding="{Binding Number, Mode=OneWay}" IsReadOnly="True"/>
                <DataGridTextColumn Header="Ort" Binding="{Binding Location, Mode=OneWay}" IsReadOnly="True" />
                <DataGridTextColumn Header="Thema" Binding="{Binding Context, Mode=OneWay}" IsReadOnly="True" />
                <DataGridTextColumn Header="Bemerkung" Binding="{Binding Note, Mode=OneWay}" IsReadOnly="True" />
            </DataGrid.Columns>

            <DataGrid.GroupStyle>
                <GroupStyle>
                    <GroupStyle.HeaderTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Name, Converter={StaticResource DateOnlyToGermanDateConverter}}"
                                       FontWeight="Bold"
                                       Background="LightGray"
                                       Padding="5"/>
                        </DataTemplate>
                    </GroupStyle.HeaderTemplate>
                </GroupStyle>
            </DataGrid.GroupStyle>
        </DataGrid>

        <Button HorizontalAlignment="Right"
                VerticalAlignment="Bottom"
                Style="{StaticResource MaterialDesignFloatingActionButton}"
                Foreground="White"
                Content="{materialDesign:PackIcon Kind=Add,Size=30}"
                Margin="30"
                Command="{Binding AddSichtungCommand, Mode=OneTime}"/>
    </Grid>
</customControls:TabView>
