<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:controls="clr-namespace:Zugsichtungen.UI.Controls.CustomControls;assembly=Zugsichtungen.UI.Controls"
                    xmlns:enumerations="clr-namespace:Zugsichtungen.Foundation.Enumerations;assembly=Zugsichtungen.Foundation"
                    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes">
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="/Zugsichtungen.Styles;component/Styles/MaterialDesignSettings.xaml" />
    </ResourceDictionary.MergedDictionaries>
    
    <Style TargetType="{x:Type controls:DialogView}" x:Key="DialogViewStyle">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type controls:DialogView}">
                    <Grid Margin="20">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto" />
                            <RowDefinition Height="auto" />
                            <RowDefinition Height="auto" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="auto" />
                        </Grid.ColumnDefinitions>

                        <TextBlock Text="{TemplateBinding Header}"
                                   Margin="0,0,0,10"
                                   x:Name="HeaderTextBlock"
                                   VerticalAlignment="Center" 
                                   Style="{StaticResource MaterialDesignHeadline5TextBlock}"/>

                        <Button Margin="0,0,0,10"
                                Grid.Column="1"
                                HorizontalAlignment="Right"
                                Content="{materialDesign:PackIcon Kind=Close}"
                                Style="{StaticResource MaterialDesignIconButton}"
                                Command="{x:Static materialDesign:DialogHost.CloseDialogCommand}"
                                CommandParameter="{x:Static enumerations:DialogResult.Abort}"
                                x:Name="CloseButton"
                                Visibility="Collapsed" />

                        <ContentPresenter Grid.Row="1"
                                          Grid.ColumnSpan="2"
                                          Margin="0,10" />

                        <StackPanel Grid.Row="2"
                                    Grid.ColumnSpan="2"
                                    Margin="0,10,0,0"
                                    Orientation="Horizontal"
                                    HorizontalAlignment="Right"
                                    x:Name="ButtonBarStackPanel">
                            <Button Content="Ja"
                                    x:Name="YesButton"
                                    Visibility="Collapsed"
                                    Command="{x:Static materialDesign:DialogHost.CloseDialogCommand}"
                                    CommandParameter="{x:Static enumerations:DialogResult.Yes}"
                                    Width="100" />
                            <Button Content="Nein"
                                    x:Name="NoButton"
                                    Visibility="Collapsed"
                                    Command="{x:Static materialDesign:DialogHost.CloseDialogCommand}"
                                    CommandParameter="{x:Static enumerations:DialogResult.No}"
                                    Width="100" />
                            <Button Content="OK"
                                    x:Name="OKButton"
                                    Visibility="Collapsed"
                                    Width="100"
                                    Command="{x:Static materialDesign:DialogHost.CloseDialogCommand}" />
                        </StackPanel>
                    </Grid>

                    <ControlTemplate.Triggers>
                        <Trigger Property="Header" Value="{x:Null}">
                            <Setter TargetName="HeaderTextBlock" Property="Visibility" Value="Collapsed" />
                        </Trigger>

                        <Trigger Property="Header" Value="">
                            <Setter TargetName="HeaderTextBlock" Property="Visibility" Value="Collapsed" />
                        </Trigger>

                        <Trigger Property="DialogViewType" Value="Close">
                            <Setter TargetName="CloseButton" Property="Visibility" Value="Visible" />
                        </Trigger>

                        <Trigger Property="DialogViewType" Value="YesNo">
                            <Setter TargetName="YesButton" Property="Visibility" Value="Visible" />
                            <Setter TargetName="NoButton" Property="Visibility" Value="Visible" />
                        </Trigger>

                        <Trigger Property="DialogViewType" Value="OK">
                            <Setter TargetName="OKButton" Property="Visibility" Value="Visible" />
                        </Trigger>

                        <Trigger Property="DialogViewType" Value="None">
                            <Setter TargetName="ButtonBarStackPanel" Property="Visibility" Value="Collapsed" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>