<components:DialogView x:Class="Zugsichtungen.Views.DialogViews.AddSichtungDialogView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Zugsichtungen.Views.DialogViews"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:components="clr-namespace:Zugsichtungen.Components"
                       DialogViewType="YesNo"
                       Header="Sichtung hinzufügen"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Margin="10" Name="DialogGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>
        <Grid Grid.Row="0" Name="FormGrid">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="auto"/>
            </Grid.ColumnDefinitions>
            <TextBlock Text="Sichtungsdatum"
                       Grid.Row="0"
                       Grid.Column="0" 
                       FontSize="20"
                       Margin="10"/>
            <DatePicker Grid.Row="0" 
                        Grid.Column="1"
                        Margin="10"
                        FontSize="16"
                        Width="100"
                        SelectedDate="{Binding SelectedDate, Mode=TwoWay, ValidatesOnDataErrors=True}"/>
            <TextBlock Text="Ort"
                       Grid.Row="0"
                       Grid.Column="2" 
                       FontSize="20"
                       Margin="10"/>
            <TextBox Grid.Row="0" 
                        Grid.Column="3"
                        Margin="10"
                     Width="200"
                     FontSize="16"
                     Text="{Binding Place, Mode=TwoWay, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged, NotifyOnValidationError=True}"/>
            <TextBlock Text="Fahrzeug"
                       Grid.Row="1"
                       Grid.Column="0" 
                       FontSize="20"
                       Margin="10"/>
            <ComboBox Grid.Row="1"
                      Grid.Column="1" 
                      Margin="10"
                      FontSize="16"
                      Width="100"
                      ItemsSource="{Binding VehicleList, Mode=OneTime}"
                      DisplayMemberPath="Vehicle"
                      SelectedItem="{Binding SelectedFahrzeug, Mode=TwoWay}"/>
            <TextBlock Text="Thema"
                       Grid.Row="1"
                       Grid.Column="2" 
                       FontSize="20"
                       Margin="10"/>
            <ComboBox Grid.Row="1"
                      Grid.Column="3" 
                      Margin="10"
                      FontSize="16"
                      ItemsSource="{Binding ContextList, Mode=OneTime}"
                      DisplayMemberPath="Name"
                      SelectedItem="{Binding SelectedKontext, Mode=TwoWay}"/>
            <TextBlock Text="Bemerkung"
                       Grid.Row="2"
                       Grid.Column="0" 
                       FontSize="20"
                       Margin="10"/>
            <TextBox Grid.Row="2" 
                        Grid.Column="1"
                     Grid.ColumnSpan="4"
                        Margin="10"
                     FontSize="16"
                     Text="{Binding Note, Mode=TwoWay}"/>

        </Grid>


        <StackPanel Grid.Row="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right">
            <Button 
                Content="Speichern"
                Name="SaveButton"
                Width="100"
                HorizontalAlignment="Right"
                Command="{x:Static materialDesign:DialogHost.CloseDialogCommand}"
                CommandParameter="{x:Static components:DialogResult.Yes}"
                Margin="0,0,5,0"
                IsEnabled="{Binding HasErrors, Converter={StaticResource InverseBooleanConverter}}"/>

            <Button 
                Content="Abbrechen"
                Width="100"
                HorizontalAlignment="Right"
                Command="{x:Static materialDesign:DialogHost.CloseDialogCommand}"
                CommandParameter="{x:Static components:DialogResult.Abort}"
                Style="{StaticResource MaterialDesignFlatSecondaryButton}"
                Margin="5,0,0,0"
                IsCancel="True"/>
        </StackPanel>
    </Grid>
</components:DialogView>
