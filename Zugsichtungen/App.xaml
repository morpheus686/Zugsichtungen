<Application x:Class="Zugsichtungen.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:converter="clr-namespace:Zugsichtungen.Converter"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:dialogViewModel="clr-namespace:Zugsichtungen.ViewModel.DialogViewModel"
             xmlns:dialogView="clr-namespace:Zugsichtungen.Views.DialogViews">
    <Application.Resources>
        <ResourceDictionary>
            <DataTemplate DataType="{x:Type dialogViewModel:AddSichtungDialogViewModel}">
                <dialogView:AddSichtungDialogView />
            </DataTemplate>

            <converter:DateOnlyToGermanDateConverter x:Key="DateOnlyToGermanDateConverter" />

            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.ObsoleteBrushes.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesign2.Defaults.xaml" />
                <ResourceDictionary Source="Styles/DialogViewStyle.xaml" />

                <materialDesign:BundledTheme BaseTheme="Inherit"
                         PrimaryColor="Red"
                         SecondaryColor="Blue" 
                         ColorAdjustment="{materialDesign:ColorAdjustment}"/>

            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
