<components:DialogView x:Class="Zugsichtungen.DialogViews.IndeterminateDialogView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    xmlns:local="clr-namespace:Zugsichtungen.DialogViews"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    mc:Ignorable="d" 
    d:DesignHeight="450" d:DesignWidth="800"
    xmlns:components="clr-namespace:Zugsichtungen.UI.Controls.CustomControls;assembly=Zugsichtungen.UI.Controls">
    <components:DialogView.Resources>
        <materialDesign:NullableToVisibilityConverter x:Key="NullableToVisibilityConverter"
                                                      NullValue="Collapsed"
                                                      NotNullValue="Visible" />
    </components:DialogView.Resources>
    <StackPanel Orientation="Vertical">
        <ProgressBar Width="50" Height="50" Margin="16"
                     Style="{StaticResource MaterialDesignCircularProgressBar}"
                     IsIndeterminate="True" />
        <TextBlock MaxWidth="300"
                   Text="{Binding Message, Mode=OneWay}"
                   x:Name="MessageTextBlock"
                   Visibility="{Binding Message, Converter={StaticResource NullableToVisibilityConverter}}"
                   TextWrapping="Wrap"
                   Margin="16" />
    </StackPanel>
</components:DialogView>
