<components:DialogView x:Class="Zugsichtungen.DialogViews.IndeterminateDialogView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    xmlns:local="clr-namespace:Zugsichtungen.DialogViews"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    mc:Ignorable="d" 
    d:DesignHeight="450" d:DesignWidth="800"
    xmlns:components="clr-namespace:Zugsichtungen.UI.Controls.CustomControls;assembly=Zugsichtungen.UI.Controls"
                       xmlns:enumerations="clr-namespace:Zugsichtungen.ViewModels.Enumerations;assembly=Zugsichtungen.Abstractions">
    <components:DialogView.Resources>
        <materialDesign:NullableToVisibilityConverter x:Key="NullableToVisibilityConverter"
                                                      NullValue="Collapsed"
                                                      NotNullValue="Visible" />
    </components:DialogView.Resources>
    <StackPanel Orientation="Vertical">
        <ProgressBar Width="50" Height="50" Margin="16"                     
                     IsIndeterminate="True" 
                     x:Name="CircularProgressBar">
            <ProgressBar.Style>
                <Style TargetType="ProgressBar" BasedOn="{StaticResource MaterialDesignCircularProgressBar}">
                    <Setter Property="Visibility" Value="Collapsed"/>

                    <Style.Triggers>
                        <DataTrigger Binding="{Binding WorkingState}" Value="{x:Static enumerations:IndeterminateState.Working}" >
                            <Setter Property="Visibility" Value="Visible"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </ProgressBar.Style>
        </ProgressBar>
        <Canvas Width="50" Height="50" Margin="16"
                x:Name="SuccessCanvas">
            <Canvas.Style>
                <Style TargetType="{x:Type Canvas}" >
                    <Setter Property="Visibility" Value="Collapsed"/>

                    <Style.Triggers>
                        <DataTrigger Binding="{Binding WorkingState}" Value="{x:Static enumerations:IndeterminateState.Success}" >
                            <Setter Property="Visibility" Value="Visible"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Canvas.Style>
            <Ellipse Fill="Green" Width="50" Height="50"/>
            <Label Width="50" Height="50"
                Content="{materialDesign:PackIcon Kind=Success, Size=40}"
                Foreground="White"
                HorizontalContentAlignment="Center"
                VerticalAlignment="Center"/>
        </Canvas>

        <TextBlock MaxWidth="300"
                   Text="{Binding Message, Mode=OneWay}"
                   x:Name="MessageTextBlock"
                   Visibility="{Binding Message, Converter={StaticResource NullableToVisibilityConverter}}"
                   TextWrapping="Wrap"
                   Margin="16" />
    </StackPanel>
</components:DialogView>
