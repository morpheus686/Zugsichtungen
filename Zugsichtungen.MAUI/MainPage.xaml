<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Zugsichtungen.MAUI.MainPage"
             Title="Sichtungsübersicht">
    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">
            <CollectionView ItemsSource="{Binding Sichtungsliste, Mode=OneWay}">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Border
                            Margin="10"
                            Padding="15"
                            BackgroundColor="DarkRed">
                            <StackLayout>
                                <Label Text="{Binding Date}" FontAttributes="Bold" FontSize="Medium" />
                                <Label Text="{Binding Number}" FontSize="Small" />
                                <Label Text="{Binding Location}" FontSize="Small" />

                                <!-- Mehr Inhalte hier -->
                            </StackLayout>
                        </Border>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <!--<Button Text="Sichtung hinzufügen"
                Margin="30"
                Command="{Binding AddSichtungCommand, Mode=OneTime}"/>-->
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
